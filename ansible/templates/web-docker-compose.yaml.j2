version: '3'
services:
  frontend_production_code:
    container_name: frontend_production_code
    build: {{remote_working_directory}}/frontend
    volumes:
      - frontend_production_code:/usr/src/ng-app/dist/
  frontend:
    container_name: frontend
    image: nginx:stable-alpine
    volumes:
      - frontend_production_code:/usr/share/nginx/html
      - {{ remote_working_directory }}/frontend/nginx.conf:/etc/nginx/conf.d/default.conf
    ports: 
      - "5000:80"
    restart: always
    links:
      - frontend_production_code
    networks:
      web_nw:
        ipv4_address: 172.20.0.2
  backend:
    container_name: backend
    build: {{remote_working_directory}}/backend
    ports:
      - "8080:8080"
    volumes:
      - {{remote_working_directory}}/backend:/code
    restart: always
    networks:
      web_nw:
        ipv4_address: 172.20.0.3
  nginx_proxy:
    container_name: nginx_proxy
    build: {{remote_working_directory}}/backend/nginx
    ports:
      - "80:80"
    links:
      - backend
      - frontend
    depends_on:
      - backend
      - frontend
    restart: always
    networks:
      web_nw:
        ipv4_address: 172.20.0.4

volumes:
  frontend_production_code:

networks:
  web_nw:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/16